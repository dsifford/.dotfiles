[alias]
    d = diff
    lg = log --oneline --decorate --all --graph
    supdate = submodule update --remote --merge
[core]
    editor = vim
    autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
    helper = store
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "vimdiff"]
	cmd = vim -f -d -c \"wincmd l\" -c 'cd \"$GIT_PREFIX\"' \"$LOCAL\" \"$REMOTE\" # Open as non-readonly
[merge]
    tool = meld
[pull]
    rebase = true
[push]
    default = simple
	followTags = true
[rerere]
    enabled = true
[status]
    submodulesummary = 1
