# i3blocks config file {{{
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent
# }}}
# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=$XDG_CONFIG_HOME/i3blocks/blocks/$BLOCK_NAME
separator_block_width=30
markup=pango

###
# Blocks
##

[disk]
interval=30
label=&#xf015;
separator=false

[disk]
instance=/
interval=30
label=&#xf0a0;
separator=false

[disk]
instance=/var
interval=30
label=/var

# -------------------

[trash]
interval=60
label=&#xf2ed;
separator=false

[cpu_usage]
command=/usr/lib/i3blocks/cpu_usage -w 50 -c 90
interval=1
label=&#xf2db;
separator=false

[memory]
interval=1
label=&#xf538;

# -------------------

[weather]
interval=600
separator=false

[time]
command=date '+%a %m/%d/%y %I:%M:%S'
interval=1

