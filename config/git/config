[alias]
    ai = "! git -c color.status=always status --short | sed -n '/^\\x1B\\[32m[A-Z]\\x1B\\[m  /!p' | fzf-tmux --ansi -m | awk '{ print $2 }' | xargs --no-run-if-empty git add"
    ch = checkout
    f  = fetch --all
    issues = "! hub issue --color | fzf-tmux --ansi | awk '{ sub(\"#\", \"\", $1); print $1 }' | xargs -I {} --no-run-if-empty bash -c 'hub issue show {} | bat --plain --language md'"
    lg = log --oneline --decorate --all --graph
    peek = ! git log --color --format=compact | fzf-tmux --ansi --preview='git show --color {1}'
    pull-requests = "! hub pr list --color | fzf-tmux --ansi | awk '{ sub(\"#\", \"\", $1); print $1 }' | xargs -I {} --no-run-if-empty bash -c 'hub issue show {} | bat --plain --language md'"
    s  = status

[core]
    editor = nvim
    autocrlf = input

[color "status"]
    added = green
    changed = blue

[credential]
    helper = store

[diff]
    tool = nvimdiff
    colorMoved = default

[difftool]
    trustExitCode = true

[fetch]
    prune = true

[merge]
    tool = nvimdiff

[mergetool]
    prompt = true

[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[pager]
    diff = diff-so-fancy | less -p'(modified|deleted):' --tabs=4 -RFX
    branch = false

[pretty]
    compact = format:%C(auto)%h %ar %C(auto)%d %s

[protocol]
    version = 2

[pull]
    rebase = true

[push]
    default = simple

[rerere]
    enabled = true

[status]
    submodulesummary = 1
    showUntrackedFiles = all
    showStash = true

[user]
    email = dereksifford@gmail.com
    name = Derek Sifford

[url "ssh://git@github.com"]
    insteadOf = https://github.com
    insteadOf = http://github.com

[url "ssh://git@gitlab.com"]
    insteadOf = https://gitlab.com
    insteadOf = http://gitlab.com

[url "ssh://git@bitbucket.org"]
    insteadOf = https://bitbucket.org
    insteadOf = http://bitbucket.org

