[alias]
    br = branch -a
    lg = log --oneline --decorate --all --graph
    submodule-update = submodule update --remote --merge

[core]
    editor = nvim
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX

[color "status"]
    added = green
    changed = blue

[credential]
    helper = store

[diff]
    tool = nvimdiff
    colorMoved = default

[difftool]
    prompt = false

[merge]
    tool = nvimdiff

[mergetool]
    prompt = true

[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[pull]
    rebase = true

[push]
    default = simple

[rerere]
    enabled = true

[status]
    submodulesummary = 1
    showUntrackedFiles = all
    showStash = true

