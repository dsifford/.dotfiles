# i3 config file (v4)
# Reference: https://i3wm.org/docs/userguide.html

# Variable Definitions {{{
set $i3_daemon_path $XDG_CONFIG_HOME/i3/daemons
set $i3_script_path $XDG_CONFIG_HOME/i3/scripts

# Vim-like pseudo-mappings
# use `xmodmap -pm` for full list of mod mappings
set $<M>   Mod4+
set $<M-S> Mod4+Shift+
set $<C>   Control+
set $<C-S> Control+Shift+
set $<A>   Mod1+

set $main_monitor     DP-2
set $vertical_monitor DP-0

set $font_title pango:Monaco, monospace, FontAwesome5Free 7
set $font_bar   pango:Monaco, monospace, FontAwesome5Free 14

set $bar_height 56

set $ws_spotify "0:&#xf1bc;"
set $ws_slack   "0:&#xf198;"
set $ws_code    "0:&#xf120;"

set_from_resource $fg        Dracula.fg        #000000
set_from_resource $bg        Dracula.bg        #000000
set_from_resource $bgdark    Dracula.bgdark    #000000
set_from_resource $red       Dracula.red       #000000
set_from_resource $green     Dracula.green     #000000
set_from_resource $yellow    Dracula.yellow    #000000
set_from_resource $cyan      Dracula.cyan      #000000
set_from_resource $purple    Dracula.purple    #000000
set_from_resource $pink      Dracula.pink      #000000
set_from_resource $comment   Dracula.comment   #000000
set_from_resource $orange    Dracula.orange    #000000
set_from_resource $selection Dracula.selection #000000

# }}}
# General Settings {{{

default_border                none
default_floating_border       none
floating_modifier             Mod4
focus_on_window_activation    urgent
font                          $font_title
hide_edge_borders             smart
mouse_warping                 none
workspace_auto_back_and_forth yes

# Improve pop-up and task dialog functionality
for_window [window_role="pop-up|task_dialog"] floating enable, move position center
for_window [window_type="dropdown_menu"] floating enable
for_window [title="(?i)^picture in picture$"] floating enable, mark --toggle FLOATING_ACTIVE; \
    exec --no-startup-id xdotool search --name "picture in picture" windowsize 1240 760; \
    [title="(?i)^picture in picture$"] move position center

# }}}
# Colors {{{

# class                 border     bg      fg       indicator child_border
client.focused          $selection $bgdark $fg      $pink     $selection
client.focused_inactive $bg        $bg     $comment $pink     $bg
client.unfocused        $bg        $bg     $comment $pink     $bg
client.urgent           $bg        $bg     $red     $pink     $bg

# }}}
# Workspace Config {{{

workspace $ws_spotify output $vertical_monitor
workspace $ws_slack   output $vertical_monitor
workspace 1           output $vertical_monitor
workspace 2           output $main_monitor
workspace $ws_code    output $main_monitor

assign [class="^Slack$"]      $ws_slack
assign [instance="^spotify$"] $ws_spotify
assign [class="Atom|code-oss"]    $ws_code

# necessary due to strange bug with spotify
for_window [instance="spotify"] move to workspace $ws_spotify

bindsym $<M>grave   workspace $ws_code
bindsym $<M-S>grave move container to workspace $ws_code

bindsym $<M>Tab   workspace $ws_spotify
bindsym $<M-S>Tab move container to workspace $ws_spotify

# }}}
# Application Configs {{{

# Rofi {{{2

bindsym $<M>space exec --no-startup-id rofi -show drun

# }}}2
# Terminal {{{2

for_window [instance="FloatingTerminal"] \
    floating enable, \
    sticky enable, \
    resize set 3840 1054, \
    move position 2160 $bar_height, \
    move scratchpad
bindsym $<C>space exec --no-startup-id $i3_script_path/toggle-floating-terminal
bindsym $<M>Home  exec --no-startup-id termite --name=FloatingTerminal -e 'tmux -2u -f /home/dsifford/.config/tmux/tmux.conf new -AD -s home'
for_window [instance="FloatingTerminal"] floating enable, sticky enable, resize set 3840 1054, move position 2160 $bar_height, move scratchpad

# }}}2
# Zeal {{{2

for_window [class="Zeal"] \
    floating enable, \
    resize set 2080 2070, \
    move scratchpad

bindsym $<C-S>space [class="Zeal"] scratchpad show, move position center

# }}}2

# }}}
# Mappings {{{

# change focus
bindsym $<M>l exec --no-startup-id $i3_script_path/focus-adjacent
bindsym $<M>h exec --no-startup-id $i3_script_path/focus-adjacent -p
bindsym $<M>j focus down
bindsym $<M>k focus up

# toggle fullscreen
bindsym $<M>Return fullscreen toggle

# toggle between split and tabbed layouts
bindsym $<M>w layout toggle splith tabbed

# toggle floating picture-in-picture
bindsym Pause [title="(?i)^picture in picture$"] mark --toggle FLOATING_ACTIVE

# switch to workspace
bindsym $<M>1 workspace 1
bindsym $<M>2 workspace 2
bindsym $<M>3 workspace 3
bindsym $<M>4 workspace 4
bindsym $<M>5 workspace 5
bindsym $<M>6 workspace 6
bindsym $<M>7 workspace 7
bindsym $<M>8 workspace 8
bindsym $<M>9 workspace 9
bindsym $<M>0 workspace 10

# move focused container directionally
bindsym $<M-S>h move left
bindsym $<M-S>l move right

# move focused container to workspace
bindsym $<M-S>1 move container to workspace 1
bindsym $<M-S>2 move container to workspace 2
bindsym $<M-S>3 move container to workspace 3
bindsym $<M-S>4 move container to workspace 4
bindsym $<M-S>5 move container to workspace 5
bindsym $<M-S>6 move container to workspace 6
bindsym $<M-S>7 move container to workspace 7
bindsym $<M-S>8 move container to workspace 8
bindsym $<M-S>9 move container to workspace 9
bindsym $<M-S>0 move container to workspace 10

# screenshots
bindsym Print     exec gscreenshot-cli -sc
bindsym $<C>Print exec --no-startup-id gscreenshot-cli -s -f /tmp/screenshot.png && gimp /tmp/screenshot.png

# audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   1 toggle

# media controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioStop exec --no-startup-id playerctl stop

# hue lights hooks
bindsym $<C>XF86AudioPrev exec --no-startup-id ~/.config/redshift/hooks/hue.py period-changed none night
bindsym $<C>XF86AudioPlay exec --no-startup-id ~/.config/redshift/hooks/hue.py toggle
bindsym $<C>XF86AudioNext exec --no-startup-id ~/.config/redshift/hooks/hue.py period-changed none daytime

# kill window
bindsym --whole-window $<M-S>button3 kill
bindsym $<M-S>q kill

# reload = reload the configuration file
# restart = restart i3 inplace (preserves layout/session, can be used to upgrade i3)
bindsym $<M-S>c reload
bindsym $<M-S>r restart

# exit i3 (also logs out of Xsession)
bindsym $<M-S>e exec --no-startup-id i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your Xsession.' -b 'Yes, exit i3' 'i3-msg exit'

# }}}
# Binding Modes {{{

mode "resize" {
    # {{{2

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width  10 px or 10 ppt
    bindsym j resize grow   height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow   width  10 px or 10 ppt

    # grow
    bindsym Left  resize grow left
    bindsym Down  resize grow down
    bindsym Up    resize grow up
    bindsym Right resize grow right

    # shrink
    bindsym $<M>Left  resize shrink right
    bindsym $<M>Down  resize shrink up
    bindsym $<M>Up    resize shrink down
    bindsym $<M>Right resize shrink left

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"

    # }}}2
}
bindsym $<M>r mode "resize"

# }}}
# Bar {{{

bar {
    # Vertical Monitor {{{2
    output $vertical_monitor
    position top

    tray_output $vertical_monitor
    tray_padding 5px

    strip_workspace_numbers yes

    colors {
        background $bg
        statusline $fg
        separator  $pink

        # type             border     bg         font
        focused_workspace  $selection $selection $green
        active_workspace   $selection $selection $fg
        inactive_workspace $selection $selection $comment
        urgent_workspace   $selection $selection $red
    }

    font $font_bar
    # }}}2
}

bar {
    # Primary Monitor {{{2
    output $main_monitor
    position top

    tray_output none

    separator_symbol "⸽"
    strip_workspace_numbers yes

    colors {
        background $bg
        statusline $fg
        separator  $pink

        # type             border     background font
        focused_workspace  $selection $selection $green
        active_workspace   $selection $selection $fg
        inactive_workspace $selection $selection $comment
        urgent_workspace   $selection $selection $red
    }

    font $font_bar

    # using custom i3status
    status_command i3blocks
    # }}}2
}

# }}}
# Autostart {{{

# kill running daemons that will be restarted
exec_always --no-startup-id killall compton

exec_always --no-startup-id feh --no-fehbg --bg-center -B "#000000" /usr/share/backgrounds/archlinux/archlinux-simplyblack.png
exec_always --no-startup-id $i3_daemon_path/smart-picture-in-picture
exec_always --no-startup-id compton -b --config $XDG_CONFIG_HOME/compton/compton.conf

exec --no-startup-id termite --name=FloatingTerminal -e 'tmux -2u -f /home/dsifford/.config/tmux/tmux.conf new -AD -s home'
exec --no-startup-id albert
exec --no-startup-id autokey-gtk
exec --no-startup-id blueman-applet
exec --no-startup-id dropbox
exec --no-startup-id dunst
exec --no-startup-id nm-applet
exec --no-startup-id redshift-gtk
exec --no-startup-id run_keybase

# }}}

