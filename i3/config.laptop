#================================================
#           BEGIN LAPTOP CONFIG
#================================================

# Display / Screen Config
exec --no-startup-id xrandr --dpi 138/eDP1		

# Floating Terminal
exec i3-msg 'exec --no-startup-id tilda --class MAINTERM'
for_window [class="MAINTERM"] floating enable, move position 0 0; move scratchpad
bindsym Control+space [class="MAINTERM"] scratchpad show


