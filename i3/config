client.focused          #44475a #282836 #f8f8f2 #ff79c6    #44475a
client.focused_inactive #282a36 #282a36 #6272a4 #ff79c6    #282a36
client.unfocused        #282a36 #282a36 #6272a4 #ff79c6    #282a36
client.urgent           #282a36 #282a36 #ff5555 #ff79c6    #282a36

