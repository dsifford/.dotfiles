
# Global mod key = Win/Cmd button
set $mod Mod4

# Hide borders
hide_edge_borders both

# Set borders to none for all new windows
new_window pixel 1
new_float pixel 1

# Set desktop background
exec --no-startup-id feh --no-fehbg --bg-fill http://wallpapercave.com/wp/NyaITD5.png

# Startup Daemons
exec --no-startup-id compton -D 3
exec --no-startup-id dunst
exec --no-startup-id albert

# Startup Applets
exec --no-startup-id nm-applet
exec --no-startup-id pasystray
exec --no-startup-id redshift-gtk
exec --no-startup-id blueman-applet

# Startup Apps
exec --no-startup-id autokey-gtk
exec --no-startup-id dropbox

# Display / Screen Config
workspace 1 output DP-4
workspace 2 output DP-2
workspace Spotify output DP-4
workspace Code output DP-2

# Disable mouse warping
mouse_warping none

# Disable focus follows mouse
focus_follows_mouse no

# Floating Terminal
exec --no-startup-id termite --name=MAINTERM -e 'bash -c "tmux new -AD -s Home"'
for_window [instance="MAINTERM"] floating enable, border pixel 0, resize set 3850 952, move position 2160px 45px, move scratchpad
bindsym $mod+Home exec --no-startup-id termite --name=MAINTERM -e 'bash -c "tmux new -AD -s Home"'
bindsym Control+space focus output DP-2, [instance="MAINTERM"] scratchpad show

#===============APP WINDOW CONFIG================

# Albert
bindsym $mod+space focus output DP-2, exec --no-startup-id albert toggle
for_window [class="albert"] move to output DP-2, move position center

# Floating gif window
for_window [class="Gifview"] floating enable
for_window [class="Animate"] floating enable, move position center

# Floating YouTube window
for_window [title="Floating for YouTube™" window_role="app"] floating enable

# Chrome pop-up windows
for_window [class="Google-chrome-unstable" window_role="pop-up"] floating enable, move position center

# Simple Screen Recorder
for_window [class="Simplescreenrecorder"] floating enable

# Kruler
for_window [class="kruler"] floating enable

# Slack
for_window [class="Slack"] move to workspace 1

# Spotify
exec --no-startup-id spotify --force-device-scale-factor=2
for_window [class="Spotify"] move to workspace Spotify
bindsym $mod+Tab workspace Spotify
bindsym $mod+Shift+Tab move container to workspace Spotify

# VS Code
for_window [class="Code"] move to workspace Code
for_window [class="Atom"] move to workspace Code
bindsym $mod+grave workspace Code
bindsym $mod+Shift+grave move container to workspace Code

# VirtualBox
for_window [title=".*\[Running\] - Oracle VM VirtualBox$"] floating enable, resize set 2080 2070, move scratchpad
bindsym $mod+v [title=".*\[Running\] - Oracle VM VirtualBox$"] scratchpad show, move position center

# Zeal
for_window [class="Zeal"] floating enable, resize set 2080 2070, move scratchpad
bindsym Control+Shift+space [class="Zeal"] scratchpad show, move position center

#====================KEYMAP======================

# Ctrl+$mod+Arrow => Move workspace to other monitor
bindsym Control+$mod+Right move workspace to output right
bindsym Control+$mod+Left move workspace to output left

# Ctrl+Printscreen => Open simplescreenrecorder
bindsym Control+Shift+Print exec simplescreenrecorder

# PrintScreen
bindsym Print exec gscreenshot-cli -sc
bindsym Control+Print exec --no-startup-id gscreenshot-cli -s -f /tmp/screenshot.png && krita /tmp/screenshot.png

# Caps Lock => Escape
exec --no-startup-id setxkbmap -option caps:escape

# Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle

# Media controls
bindsym XF86AudioPlay exec --no-startup-id "playerctl play-pause"
bindsym XF86AudioNext exec --no-startup-id "playerctl next"
bindsym XF86AudioPrev exec --no-startup-id "playerctl previous"
bindsym XF86AudioStop exec --no-startup-id "playerctl stop"

# Hue lights hooks
bindsym Control+XF86AudioNext exec --no-startup-id ~/.config/redshift/hooks/hue.py period-changed none daytime
bindsym Control+XF86AudioPrev exec --no-startup-id ~/.config/redshift/hooks/hue.py period-changed none night
bindsym Control+XF86AudioPlay exec --no-startup-id ~/.config/redshift/hooks/hue.py period-changed daytime night

# $mod+Shift+Middle Mouse Button => kill window
bindsym --whole-window $mod+Shift+button3 kill

#================================================
#             BEGIN i3 DEFAULTS
#================================================

# Set default font
font pango:Monaco 7

# Use Mouse+$mod to drag floating windows to their desired position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# Enable floating
bindsym $mod+Shift+space floating enable

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Control+h split horizontal

# split in vertical orientation
bindsym $mod+Control+v split vertical

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # grow
    bindsym Left resize grow left
    bindsym Down resize grow down
    bindsym Up resize grow up
    bindsym Right resize grow right

    # shrink
    bindsym $mod+Left resize shrink right
    bindsym $mod+Down resize shrink up
    bindsym $mod+Up resize shrink down
    bindsym $mod+Right resize shrink left

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

