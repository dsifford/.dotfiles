#!/usr/bin/env bash

if [ ! -f /usr/bin/python ]; then
	printf "Python must be installed first.\n"
	exit 0
fi

if [[ $EUID == 0 || $HOME == '/root' ]]; then
	printf "Don't run this with sudo\n"
	exit 0
fi

# Make $HOME/bin if it doesn't exist
mkdir -p "$HOME"/bin

# Clone the vundle repo if it doesn't exist
[ ! "$(ls -A ./vim/vim/bundle/Vundle.vim)" ] && \
    git clone https://github.com/VundleVim/Vundle.vim.git ./vim/vim/bundle/Vundle.vim

set -e

if [[ $(uname) == 'Darwin' ]]; then
	CONFIG="install.conf.mac.yaml"
elif [[ $(uname -n) == 'desktop' ]]; then
	CONFIG="install.conf.yaml"
else
    CONFIG="install.conf.laptop.yaml"
fi

DOTBOT_DIR="dotbot"
DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
git submodule update --init --recursive "${DOTBOT_DIR}"

"${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" -c "${CONFIG}" "${@}"
